<resources>

    <!-- Base application theme. .Light.DarkActionBar-->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/dark_red</item>
        <item name="colorAccent">@color/gray</item>
        <!--设置窗口颜色-->
        <item name="android:colorBackground">@color/soothing_blue</item>

        <!--设置button-->
        <item name="android:buttonStyle">@style/BeatBoxButon</item>
    </style>

    <style name="BeatBoxButon" parent="android:style/Widget.Holo.Button">
        <item name="android:background">@drawable/button_beat_box</item>
    </style>

</resources>
